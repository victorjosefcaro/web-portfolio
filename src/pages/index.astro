---
// src/pages/index.astro
import MainLayout from "../layouts/MainLayout.astro";
// Import components
import PortfolioCard from "../components/PortfolioCard.astro";
import SkillTag from "../components/SkillTag.astro";
import BlogPostCard from "../components/BlogPostCard.astro";
import FadeIn from "../components/FadeIn.astro";

// Import data from data files
import { portfolioItems } from "../data/portfolioItems";
import { skillCategories } from "../data/skillCategories";
import { blogPosts } from "../data/blogPosts";

// Pass the desired title to the layout
const pageTitle = "Victor Caro | Portfolio";
const metaDescription =
  "Victor Caro's personal portfolio website. Explore projects, skills, education, and contact information for a passionate Computer Science student and developer.";
const keywords =
  "Victor Caro, portfolio, computer science, developer, programming, projects, web development, skills";
---

<MainLayout
  title={pageTitle}
  description={metaDescription}
  keywords={keywords}
  ogImage="/images/Victor.webp"
>
  <div>
    {/* --- Hero Banner Section --- */}
    <section id="about" class="mb-8 sm:mb-12 md:mb-16 lg:mb-20">
      {/* Hero Banner Container */}
      <div
        class="bg-gradient-to-r from-indigo-200 via-purple-200 to-pink-200 dark:from-indigo-950 dark:via-purple-950 dark:to-pink-950 px-4 sm:px-8 md:px-16 lg:px-32 py-16 sm:py-36 md:py-48 shadow-lg flex flex-col md:flex-row items-center md:gap-12 justify-center"
      >
        {/* Image Content */}
        <div class="flex justify-end mb-4">
          <FadeIn delay={400}>
            <img
              src="/images/Victor.webp"
              alt="Victor Caro Profile Picture"
              class="rounded-full w-48 h-48 sm:w-64 sm:h-64 object-cover shadow-lg"
              loading="eager"
              fetchpriority="high"
            />
          </FadeIn>
        </div>
        {/* Text Content */}
        <div class="text-center md:text-left max-w-2xl">
          <FadeIn delay={800}>
            <h1
              class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl text-gray-900 dark:text-white md:mb-2"
            >
              Hi! I'm <span
                class="text-indigo-600 dark:text-indigo-300 font-bold"
                >Victor Caro</span
              >
            </h1>
            <h2
              class="text-xl md:text-2xl lg:text-3xl xl:text-4xl text-gray-700 dark:text-gray-200 md:mb-2"
            >
              Frontend Web Developer
            </h2>
            <h3
              class="text-lg md:text-xl lg:text-2xl xl:text-3xl text-gray-700 dark:text-gray-200 mb-2"
            >
              <span id="location" class="relative inline-block cursor-pointer"
                ><i class="fas fa-location-dot"></i></span
              > Cavite, Philippines
            </h3>
            <div
              class="block text-base text-gray-700 dark:text-gray-200 mb-4 inline-flex space-x-4 md:space-x-8 items-center text-lg md:text-xl lg:text-2xl xl:text-3xl"
            >
              <a
                href="https://github.com/victorjosefcaro"
                target="_blank"
                rel="noopener noreferrer"
                title="GitHub"
                class="hover:text-indigo-600 dark:hover:text-indigo-300 transition-colors"
              >
                <i class="fab fa-github"></i>
              </a>
              <a
                href="https://www.linkedin.com/in/victor-caro-a4906434a/"
                target="_blank"
                rel="noopener noreferrer"
                title="LinkedIn"
                class="hover:text-indigo-600 dark:hover:text-indigo-300 transition-colors"
              >
                <i class="fab fa-linkedin"></i>
              </a>
              <a
                href="mailto:victorjosefcaro@gmail.com"
                title="Email"
                class="hover:text-indigo-600 dark:hover:text-indigo-300 transition-colors"
              >
                <i class="fas fa-envelope"></i>
              </a>
            </div>
          </FadeIn>
        </div>
      </div>
    </section>

    {/* --- Portfolio Section --- */}
    <FadeIn
      as="section"
      id="portfolio"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28 overflow-auto"
      delay={200}
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üíº</span>Portfolio
      </h2>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-6 sm:gap-8"
        role="list"
        aria-label="Portfolio projects"
      >
        {
          portfolioItems.map((item, index) => (
            <FadeIn delay={300 + index * 100}>
              <PortfolioCard {...item} />
            </FadeIn>
          ))
        }
      </div>
    </FadeIn>

    {/* --- Skills Section --- */}
    <FadeIn
      as="section"
      id="skills"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
      delay={400}
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üõ†Ô∏è</span>Skills
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
        {
          skillCategories.map((category, categoryIndex) => (
            <FadeIn delay={500 + categoryIndex * 100}>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
                  {category.title}
                </h3>
                <div
                  class="flex flex-wrap gap-3"
                  role="list"
                  aria-label={`${category.title} skills`}
                >
                  {category.skills.map((skill, skillIndex) => (
                    <FadeIn
                      delay={600 + categoryIndex * 100 + skillIndex * 50}
                      direction="left"
                    >
                      <SkillTag
                        name={skill.name}
                        icon={skill.icon}
                        bgColor={category.bgColor}
                        textColor={category.textColor}
                      />
                    </FadeIn>
                  ))}
                </div>
              </div>
            </FadeIn>
          ))
        }
      </div>
    </FadeIn>

    {/* --- Blog Section --- */}
    <FadeIn
      as="section"
      id="blog"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
      delay={600}
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-8 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üì∞</span>Blog
      </h2>
      <div class="overflow-x-auto">
        <div
          class="flex pb-4 gap-6 min-w-max scrollbar-hide"
          role="list"
          aria-label="Blog posts"
        >
          {
            blogPosts.map((post, index) => (
              <FadeIn delay={700 + index * 100}>
                <BlogPostCard
                  title={post.title}
                  imageUrl={post.imageUrl}
                  date={post.date}
                  slug={post.slug}
                />
              </FadeIn>
            ))
          }
        </div>
      </div>
    </FadeIn>

    {/* --- Education Section --- */}
    <FadeIn
      as="section"
      id="education"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
      delay={800}
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üéì</span>Education
      </h2>
      <div class="space-y-6">
        <div class="bg-white dark:bg-gray-800 p-5 rounded-lg shadow-md">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">
            Bachelor of Science In Computer Science
          </h3>
          <p class="text-md text-gray-700 dark:text-gray-300 font-medium">
            Adamson University
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-400">2021 - 2025</p>
        </div>
      </div>
    </FadeIn>

    {/* --- Contact Section --- */}
    <FadeIn
      as="section"
      id="contact"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
      delay={1000}
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">‚úâÔ∏è</span>Contact
      </h2>
      <p class="mb-6 text-gray-700 dark:text-gray-300">
        Have a question or want to work together? Feel free to reach out using
        the form below or via email. I'm always open to discussing new projects
        or opportunities.
      </p>
      <div class="bg-white dark:bg-gray-800 p-4 sm:p-6 rounded-lg shadow-md">
        <form id="contact-form" action="#" method="POST">
          <div class="mb-4">
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Your Name"
            />
          </div>
          <div class="mb-4">
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="your.email@example.com"
            />
          </div>
          <div class="mb-4">
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Your message..."></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 w-full sm:w-auto"
            >
              Send Message
            </button>
          </div>
          <p id="form-status" class="mt-4 text-sm font-semibold transition-all">
          </p>
        </form>
        <script is:inline>
          const form = document.getElementById("contact-form");
          const status = document.getElementById("form-status");
          function setStatus(message, type) {
            status.textContent = message;
            status.className =
              "mt-4 text-sm font-semibold transition-all px-4 py-2 rounded " +
              (type === "success"
                ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 border border-green-300 dark:border-green-700 shadow"
                : type === "error"
                  ? "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 border border-red-300 dark:border-red-700 shadow"
                  : "bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200 border border-indigo-300 dark:border-indigo-700 shadow");
          }
          form.addEventListener("submit", async (e) => {
            e.preventDefault();
            setStatus("Sending...", "info");
            const name = form.name.value;
            const email = form.email.value;
            const message = form.message.value;
            try {
              const res = await fetch("/api/contact", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ name, email, message }),
              });
              if (res.ok) {
                setStatus("Message sent successfully!", "success");
                form.reset();
                setTimeout(() => {
                  status.textContent = "";
                  status.className =
                    "mt-4 text-sm font-semibold transition-all";
                }, 4000);
              } else {
                setStatus(
                  "Failed to send message. Please try again later.",
                  "error",
                );
              }
            } catch (err) {
              setStatus(
                "Error sending message. Please try again later.",
                "error",
              );
            }
          });
        </script>
        <p class="mt-6 text-sm text-gray-600 dark:text-gray-400 break-words">
          Alternatively, you can email me directly at: <a
            href="mailto:victorjosefcaro@gmail.com"
            class="text-indigo-700 dark:text-indigo-300 hover:underline"
            >victorjosefcaro@gmail.com</a
          >
        </p>
      </div>
    </FadeIn>
  </div>

  <script is:inline>
    const locationText = document.getElementById("location");
    const locationTooltip = document.createElement("span");
    locationTooltip.className =
      "absolute bg-indigo-600 text-white text-sm font-mono rounded px-2 py-1 shadow-md hidden dark:bg-indigo-300 dark:text-gray-900";
    locationTooltip.style.zIndex = "10";
    locationTooltip.style.whiteSpace = "nowrap";
    locationTooltip.style.position = "absolute";
    locationTooltip.style.left = "50%";
    locationTooltip.style.top = "-120%";
    locationTooltip.style.transform = "translateX(-50%)";
    locationTooltip.style.textAlign = "center";
    locationTooltip.style.transition = "opacity 0.4s ease, transform 0.4s ease";
    locationTooltip.style.opacity = "0";

    function updateTime() {
      const now = new Date();
      const options = {
        timeZone: "Asia/Manila",
        hour: "2-digit",
        minute: "2-digit",
      };
      const timeString = now.toLocaleTimeString("en-US", options);
      locationTooltip.textContent = `${timeString}`;
    }

    locationText.addEventListener("mouseenter", () => {
      updateTime();
      locationTooltip.classList.remove("hidden");
      locationTooltip.style.opacity = "1";
      locationTooltip.style.transform = "translateX(-50%) translateY(0)";
      locationText.appendChild(locationTooltip);
    });

    locationText.addEventListener("mouseleave", () => {
      locationTooltip.style.opacity = "0";
      locationTooltip.style.transform = "translateX(-50%) translateY(-10px)";
      setTimeout(() => {
        locationTooltip.classList.add("hidden");
      }, 400);
    });
  </script>
</MainLayout>
